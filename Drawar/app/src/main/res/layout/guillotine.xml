<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/OCR"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_stt" />
        <TextView
            android:id="@+id/sttTextView"
            style="@style/TextView.GuillotineItem"
            android:text="Speech to Text" />
        <!--<com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/profile" />-->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sts_group"
        style="@style/LinearLayout.GuillotineItem"
        >

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_sts" />
        <TextView
            android:id="@+id/stsTextView"
                    style="@style/TextView.GuillotineItem"
                    android:text="Speech to Speech" />
        <!--<com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/profile" />-->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/chat_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_feed" />
        <TextView
            android:id="@+id/chatTextView"
            style="@style/TextView.GuillotineItem"
            android:text="Chat" />
        <!--<com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/feed" />-->
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ocr_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_translation" />
        <TextView
            android:id="@+id/ocrTextView"
            style="@style/TextView.GuillotineItem"
            android:text="Real-time Translation" />
        <!--<com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/feed" />-->
    </LinearLayout>


