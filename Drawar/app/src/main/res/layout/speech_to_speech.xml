<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical" >
     />
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:padding="10dp">



        <ListView
            android:id="@+id/list_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"


            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp"
            android:divider="@null"
            android:listSelector="@android:color/transparent"
            android:transcriptMode="alwaysScroll" />



    </RelativeLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/linearLayout">
        <Spinner
            android:id="@+id/languages2"
            android:layout_width="100dp"
            android:textStyle="bold"
            android:background="@color/sayHiGreen"

            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp"
            android:layout_marginRight="2dp"
            />
        <ImageButton
            android:id="@+id/btnSpeak"
            android:layout_width="100dp"
            android:layout_height="91dp"
            android:background="@null"
            android:clickable="true"
            android:onClick="promptSpeechInput2"
            android:src="@drawable/secondary_record_button_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="@string/tap_on_mic"
            android:textColor="@color/sayHiGreen"
            android:textSize="15dp"

            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/languages"
            android:layout_width="100dp"
            android:textStyle="bold"
            android:background="@color/sayHiBlue"

            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            />
        <ImageButton
            android:id="@+id/btnSpeak2"
            android:layout_width="100dp"
            android:layout_height="91dp"
            android:background="@null"
            android:clickable="true"
            android:onClick="promptSpeechInput"
            android:src="@drawable/primary_record_button_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="@string/tap_on_mic"
            android:textColor="@color/sayHiBlue"
            android:textSize="15dp"

            android:textStyle="normal" />
    </LinearLayout>


</RelativeLayout>